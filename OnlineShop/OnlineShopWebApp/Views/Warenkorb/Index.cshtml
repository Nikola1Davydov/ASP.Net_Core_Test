@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    @foreach (var product in Model)
    {
    <div class="col-3 card shadow">
        <img class="card-img-top" src="https://revitdynamo.com/cdn/shop/files/RD_SideTables-3DView-GridR.jpg?v=1702472005&width=1080">
        <div class="card-body">
            <a style="color:black" href="/Warenkorb/index/">
                    <h5>@product.Name</h5>
            </a>
                <h5>@product.Cost Euro</h5>
        </div>
    </div>
    }
</div>

<div class="row">
    <div class="col">
        <div>
            <a class="btn btn-dark" href="/Home/index" role="button">Einkaufen fortsetzen</a>
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
